<%= form_for @repair, url: sti_repair_path(@vehicle, @repair.type, @repair) do |f| %>
  <%= f.label 'Type' %>
  <%= f.select :type, Repair.types, {}, disabled: @type != "Repair" %>
  <%= f.label "Description" %>
  <%= f.text_area :repair_description %>
  <%= f.label 'Date' %>
  <%= f.datetime_select :repair_date %>
  <%= f.label 'Cost' %>
  <%= f.text_field :repair_cost %>
  <%= f.label 'Image' %>
  <%= f.file_field :repair_image%>
  <%= f.label 'Place' %>
  <%= f.text_field :repair_place %>
  <%= f.submit %>
<% end %>
