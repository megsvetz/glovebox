<div class="container">
  <h1 class="text-center"><%= @repair.vehicle.name.capitalize %></h1>
  <h2 class="text-center">Edit</h2>
  <hr>
  <div class="row">
    <div class="col-md-7 text-center">
      <% if @repair.repair_image.present? %>
        <%= link_to @repair.repair_image.url, rel: :lazybox do %>
          <%= image_tag(@repair.repair_image.url(:large), :class => "img-thumbnail") %>
        <% end %>
      <% else %>
        <img class="img-responsive" src="http://placehold.it/700x300" alt="">
      <% end %>
      <br/>
    </div>
    <div class="col-md-5 text-center">
      <h3><%= @repair.repair_description %></h3>
      <h3><%= @repair.repair_date.strftime('%b %d, %Y') %></h3>
      <% if @repair.repair_cost.present? %>
        <h3>Cost: $ <%= sprintf('%.2f', @repair.repair_cost) %></h3>
      <% end %>
      <h3><%= @repair.repair_place %></h3>
      <br>
      <p><%= link_to 'Edit', edit_vehicle_repair_path(@repair.vehicle_id, @repair.id), :class => "myButton" %> <%= link_to 'Back', vehicle_repairs_path(@repair.vehicle_id), :class => "myButton", :method => :get %></p>
    </div>
  </div>
</div>
<br>
