<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<h1 class='text-center' data-zipcode="<%= current_user.zip_code %>">Gas Prices</h1>
<hr />
<div class="container">
  <div class="text-center">
    <input id='gas_zip' type="field" name="name" placeholder="Zip Code" value="<%= current_user.zip_code %>"></input>
    <input id='distance_zip' placeholder="Distance (max: 50)"></input>
    <button id='get-gas' name="Get Cheapest Gas1" value="Get Gas Prices!">Get Gas Prices!</button>
    <hr />
  </div>

  <div class="col-sm-6">
    <table class="table gas-table hidden" border=1>
      <thead>
        <tr id='gas_header'>
          <th>Price</th>
          <th>Gas Station</th>
          <th>Address</th>
        </tr>
      </thead>
    </table>
  </div>

  <div class="col-sm-6 pull-right">
    <div id="map" style='width: 540px; height: 400px;'>
    </div>
  </div>
</div>

