 

<div class="container">
  <h1 class="text-center"><%= @vehicle.name.capitalize %></h1>
  <hr>
  <div class="row">
    <div class="col-md-2 col-sm-3 col-xs-12">
      <%= link_to 'Back to My Vehicles', vehicles_path, :class => "myButton", :style => "margin:0%;", :method => :get %>
    </div>
    <div class="col-md-offset-6 col-md-2 col-sm-offset-2 col-sm-3 col-xs-12">
      <%= link_to 'View Registration', vehicle_registration_path(@vehicle.id, @vehicle.registration.id), class: "myButton", :style => "margin:0%;" %> 
    </div>
    <div class="col-md-2 col-sm-3 col-xs-12">
      <%= link_to 'View Insurance', vehicle_insurance_path(@vehicle.id, @vehicle.insurance.id), class: "myButton", :style => "margin:0%;" %>
    </div>
  </div>
      <hr>
  <div class="row">
    <div class="col-md-7 text-center"> 
      <% if @vehicle.image.present? %>
        <%= link_to image_tag(@vehicle.image.url(:large), :class => "img-thumbnail") %>
      <% else %>
        <img class="img-responsive" src="http://placehold.it/700x300" alt="">
      <% end %> 
    </div><br><br>

    <div class="col-md-5 text-center">
      <%=@vehicle.year %> <%= @vehicle.make %> <%= @vehicle.model %><br>
      Mileage: <%= @vehicle.mileage %><br>
      Vin: <%= @vehicle.vin %><br>
      License Plate: <%= @vehicle.license_plate %><br>
      Registered in <%= @vehicle.state %><br>
      <% if @vehicle.registration.present? %>
        Reg Expires: <%= @vehicle.registration.expiration %>
      <% else %>
        No registration entered!
      <% end %>
      <br>
      <% if @vehicle.insurance.present? %>
        Insurance Expires: <%= @vehicle.insurance.expiration_date %>
      <% else %>
        No Insurance entered!
      <% end %>
      <br><br>
      <%= link_to 'View Repairs', vehicle_repairs_path(@vehicle.id), class: "myButton" %>
      <%= link_to 'Add Repair', new_vehicle_repair_path(@vehicle.id), class: "myButton" %><br><br>
   
      <%= link_to 'Edit Vehicle', edit_vehicle_path(@vehicle.id), class: "myButton" %>
      <%= link_to 'Delete Vehicle', vehicle_path(@vehicle.id), method: :delete, class: "myButton" %><br><br>
    </div>
  </div>
</div>
<% a = '$10' %>
<%= link_to pie_chart({"Football" => 10, "Basketball" => 5}), vehicle_repairs_path(@vehicle.id) %>
<%= pie_chart @vehicle.repairs.group(:type).sum(:repair_cost) %>
