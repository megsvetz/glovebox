<div class="modal fade" id="insurance_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <% if @vehicle && @vehicle.insurance %>
        <div class="modal-header">
          <h4 class="modal-title">Insurance for <%= @vehicle.name.capitalize %></h4>
        </div>
        <div class="modal-body">
          <% if @vehicle.insurance.image.present? %>
            <%= link_to image_tag(@vehicle.insurance.image.url(:medium)) %>
          <% else %>
            <img class="img-responsive" src="http://placehold.it/700x300" alt="">
          <% end %>
        </div>
      <% else %>
        <div class="modal-body"></div>  
      <% end %>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
