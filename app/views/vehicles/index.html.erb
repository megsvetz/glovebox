<div class='vehicle-header text-center'>Your Vehicles</div>

  <hr />
  <% unless @vehicles.blank? %>
  <div class="text-center"><p><%= link_to 'See All Vehicle Insurances', vehicle_insurances_path(@vehicles.first.id), class: 'btn btn-default', style: 'font-size:.75em; margin-right:5%;' %>
    <%= link_to 'See All Vehicle Registrations', vehicle_registrations_path(@vehicles.first.id), class: 'btn btn-default', style: 'font-size:.75em' %></p>
  </div>
    <hr>
    <div class="row">
      <% @vehicles.each do |a| %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail vehicle_show" style="margin-left:auto; margin-right:auto;">
            <%= link_to(image_tag(a.image.url(:medium)), vehicle_path(a.id)) %>
            <div class="caption">
              <div class='vehicle-text'><%= link_to a.make + ' ' + a.model, vehicle_path(a.id) %>
                <br>
                <% if a.registration.present? %>
                  Reg Expires: <%= a.registration.expiration.strftime('%b %d, %Y') %>
                <% else %>
                  No Registration Entered!
                <% end %>
                <br>
                <% if a.insurance.present? %>
                  Insurance Expires: <%= a.insurance.expiration_date.strftime('%b %d, %Y') %>
                <% else %>
                  No Insurance Entered!
                <% end %>
                <br>
                Mileage: <%= a.mileage %><br>
              </div>

              <br>
              <p>
              <div class='text-center'><%= link_to 'See Repairs', vehicle_repairs_path(a.id), class: 'btn btn-default'%></div></p>
              <% if a.insurance.present? %>
                <p><div class='text-center'><div id="insurance_modal_button" class="myButton">Insurance</div>
              <% else %>
                <p><div class='text-center'><%= link_to 'Add Insurance', new_vehicle_insurance_path(a.id), class: 'btn btn-default', style: 'font-size:.75em' %>
              <% end %>
              <% if a.registration.present? %>
                <div id="registration_modal_button" class="myButton">Registration</div></div>
              <% else %>
                <%= link_to 'Add Registration', new_vehicle_registration_path(a.id), class: 'btn btn-default', style: 'font-size:.75em' %></div>
              <% end %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= will_paginate @vehicles %>
</div>
<% else %>
  <h3 class="text-center">It appears that you have no vehicles. To experience the best of what Glovebox has to offer click the "New Vehicle" button below.</h3>
  <div class="col-sm-offset-5 col-sm-2">
    <%= link_to 'New Vehicle', new_vehicle_path, class: 'btn btn-form-submit' %>
  </div>
<% end %>

<% if @vehicle.present? %>
  <% if @vehicle.insurance.present? %>
    <%= render(partial: "vehicles/insurance_modal") %>
  <% end %>
  <% if @vehicle.registration.present? %>
    <%= render(partial: "vehicles/registration_modal") %> 
  <% end %>
<% end %>