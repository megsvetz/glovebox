<div class="text-center">
  <br>
  <h2 style="font-size:28px;">Contact Us</h2>
    <%= form_for @contact, url: contact_path do |f| %>
    <!-- <form class="" action="/contact" method="POST"> -->
      <div class="row">
        <div class="col-md-3 col-sm-4 col-sm-offset-2 col-md-offset-3">
          <%= f.text_field :first_name, class: "contact-form-fields", :placeholder=>"First Name", :required => true %>
          <!-- <input class="contact-form-fields" type="text" name="first_name" placeholder="First Name"> -->
        </div>
        <div class="col-md-3 col-sm-4">
          <%= f.text_field :last_name, class: "contact-form-fields", :placeholder =>"Last Name", :required => true %>
          <!-- <input class="contact-form-fields" type="text" name="last_name" placeholder="Last Name"> -->
        </div>
      </div>
      <div class="row">
        <div class="col-md-3 col-sm-4 col-sm-offset-2 col-md-offset-3">
          <%= f.text_field :email, class: "contact-form-fields", :placeholder => "Your Email Address", :required => true %>
          <!-- <input class="contact-form-fields" type="text" name="email" placeholder="Your Email Address"> -->
        </div>
        <div class="col-md-3 col-sm-4">
          <%= f.text_field :phone, class: "contact-form-fields", :placeholder => "Your Phone Number" %>
          <!-- <input class="contact-form-fields" type="phone" name="phone" placeholder="Your Phone Number"> -->
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-sm-8 col-sm-offset-2 col-md-offset-3">
          <%= f.text_area :message, class: "contact-form-fields", :placeholder => "Have ideas to improve Glovebox> Let us know how!", :required => true%>
          <!-- <textarea class="contact-form-fields form-message" name="body" placeholder="Have ideas to improve Glovebox? Let us know how!" type="text"></textarea> -->
        </div>
      </div>
      <div class="row">
          <div class="col-md-6 col-sm-8 col-sm-offset-2 col-md-offset-3">
            <%= f.submit "Send Now", class: "btn btn-default"  %>
            <!-- <input class="btn btn-default" type="submit" value="Send Now"> -->
            <a id="clear_form" class="btn btn-default" href="/">Cancel</a>
          </div>
      </div>
    <!-- </form> -->
    <% end %>
  <br>
  <hr>
</div>
